  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Run all tests (no external)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run test -- --group=-api"
    },
    {
      "name": "Run faunadb tests",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run test -- --group=api"
    }
  ]
}